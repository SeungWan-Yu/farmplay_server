$('#recruitBtn').click(function(){
    let recuritFarmCode         = $('#recuritFarmCode').val();
    let recuritState            = $('#recuritState').val();
    let recuritUserId           = $('#recuritUserId').val();
    let recuritStart            = $('#recuritStart').val();
    let recuritEnd              = $('recuritEnd').val();
    let recuritJobStart         = $('#recuritJobStart').val();
    let recuritJobEnd           = $('#recuritJobEnd').val();
    let recuritJobKind          = $('#recuritJobKind').val();
    let recuritMealProvide      = $('#recuritMealProvide').val();
    let recuritMealVeget        = $('#recuritMealVeget').val();
    let recuritMealMemo         = $('#recuritMealMemo').val();
    let recuritChkFampler       = $('#recuritChkFampler').val();
    let recuritChkPeriod        = $('#recuritChkPeriod').val();
    let recuritChkMinor         = $('#recuritChkMinor').val();
    let recuritChkMinorMemo     = $('#recuritChkMinorMemo').val();
    let recuritChkMax           = $('#recuritChkMax').val();
    let recuritChkSummary       = $('#recuritChkSummary').val();

    let sendData = {
        "recuritFarmCode"       : recuritFarmCode,
        "recuritState"          : recuritState,
        "recuritUserId"         : recuritUserId,
        "recuritStart"          : recuritStart,
        "recuritEnd"            : recuritEnd,
        "recuritJobStart"       : recuritJobStart,
        "recuritJobEnd"         : recuritJobEnd,
        "recuritJobKind"        : recuritJobKind,
        "recuritMealProvide"    : recuritMealProvide,
        "recuritMealVeget"      : recuritMealVeget,
        "recuritMealMemo"       : recuritMealMemo,
        "recuritChkFampler"     : recuritChkFampler,
        "recuritChkPeriod"      : recuritChkPeriod,
        "recuritChkMinor"       : recuritChkMinor,  
        "recuritChkMinorMemo"   : recuritChkMinorMemo,
        "recuritChkMax"         : recuritChkMax,
        "recuritChkSummary"     : recuritChkSummary
    }

    $.ajax({
        contentType: "application/json; charset=utf-8",
        type:"post",
        dataType:'json',
        data: JSON.stringify(sendData),
        url: '/v1/recruit',
        success: function(data) {
            $('.p-3_result').text(data.result);
            $('.p-3_return').text(JSON.stringify(data.message));
        },
        error: function searchError(xhr, err) {
            alert("에러");
            alert(err);
        }
    });
});